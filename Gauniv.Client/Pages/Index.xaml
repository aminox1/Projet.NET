<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Gauniv.Client.ViewModel"
             xmlns:models="clr-namespace:Gauniv.Client.Models"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="Gauniv.Client.Pages.Index"
             Title="All Games"
             x:DataType="vm:IndexViewModel">
    
    <Grid RowDefinitions="Auto,Auto,*" Padding="10">
        <!-- Search Bar -->
        <SearchBar Grid.Row="0"
                   Placeholder="Search games by name or description..."
                   Text="{Binding SearchText}"
                   Margin="0,0,0,10"/>
        
        <!-- Filters Section -->
        <Border Grid.Row="1" 
                StrokeThickness="1" 
                Stroke="#E0E0E0" 
                Padding="10"
                BackgroundColor="#F5F5F5"
                StrokeShape="RoundRectangle 10"
                Margin="0,0,0,10">
            <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="*,*,*,*" RowSpacing="10" ColumnSpacing="10">
                
                <!-- Category Filter -->
                <VerticalStackLayout Grid.Row="0" Grid.Column="0" Spacing="3">
                    <Label Text="ðŸ“‚ Category" FontSize="12" FontAttributes="Bold" TextColor="#666"/>
                    <Picker ItemsSource="{Binding Categories}"
                            SelectedItem="{Binding SelectedCategory}"
                            ItemDisplayBinding="{Binding Name}"
                            FontSize="13"
                            BackgroundColor="White"/>
                </VerticalStackLayout>
                
                <!-- Min Price -->
                <VerticalStackLayout Grid.Row="0" Grid.Column="1" Spacing="3">
                    <Label Text="ðŸ’° Min Price" FontSize="12" FontAttributes="Bold" TextColor="#666"/>
                    <Entry Text="{Binding MinPrice}" 
                           Placeholder="0.00" 
                           Keyboard="Numeric"
                           FontSize="13"
                           BackgroundColor="White"/>
                </VerticalStackLayout>
                
                <!-- Max Price -->
                <VerticalStackLayout Grid.Row="0" Grid.Column="2" Spacing="3">
                    <Label Text="ðŸ’° Max Price" FontSize="12" FontAttributes="Bold" TextColor="#666"/>
                    <Entry Text="{Binding MaxPrice}" 
                           Placeholder="999.99" 
                           Keyboard="Numeric"
                           FontSize="13"
                           BackgroundColor="White"/>
                </VerticalStackLayout>
                
                <!-- Clear Button -->
                <VerticalStackLayout Grid.Row="0" Grid.Column="3" Spacing="3">
                    <Label Text=" " FontSize="12"/>
                    <Button Text="ðŸ—‘ï¸ Clear Filters"
                            Command="{Binding ClearFiltersCommand}"
                            BackgroundColor="#6C757D"
                            TextColor="White"
                            FontSize="12"
                            CornerRadius="5"/>
                </VerticalStackLayout>
                
                <!-- Ownership Filters -->
                <HorizontalStackLayout Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Spacing="20">
                    <Border Padding="10,5" 
                            BackgroundColor="White"
                            StrokeThickness="1"
                            Stroke="#28A745"
                            StrokeShape="RoundRectangle 5">
                        <HorizontalStackLayout Spacing="5">
                            <CheckBox IsChecked="{Binding ShowOwnedOnly}" 
                                      Color="#28A745"/>
                            <Label Text="âœ“ Show Only Owned Games" 
                                   VerticalOptions="Center"
                                   TextColor="#28A745"
                                   FontSize="13"
                                   FontAttributes="Bold"/>
                        </HorizontalStackLayout>
                    </Border>
                    
                    <Border Padding="10,5" 
                            BackgroundColor="White"
                            StrokeThickness="1"
                            Stroke="#FF6B35"
                            StrokeShape="RoundRectangle 5">
                        <HorizontalStackLayout Spacing="5">
                            <CheckBox IsChecked="{Binding ShowNotOwnedOnly}" 
                                      Color="#FF6B35"/>
                            <Label Text="ðŸ›’ Show Only Not Owned" 
                                   VerticalOptions="Center"
                                   TextColor="#FF6B35"
                                   FontSize="13"
                                   FontAttributes="Bold"/>
                        </HorizontalStackLayout>
                    </Border>
                </HorizontalStackLayout>
                
            </Grid>
        </Border>

        <!-- Games List -->
        <RefreshView Grid.Row="2" 
                     IsRefreshing="{Binding IsLoading}"
                     Command="{Binding LoadGamesCommand}">
            <CollectionView ItemsSource="{Binding Games}"
                           SelectionMode="None">
                <CollectionView.EmptyView>
                    <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
                        <Label Text="No games available" 
                               FontSize="18" 
                               HorizontalTextAlignment="Center"
                               TextColor="Gray"/>
                        <Label Text="Pull down to refresh" 
                               FontSize="14" 
                               HorizontalTextAlignment="Center"
                               TextColor="Gray"
                               Margin="0,10,0,0"/>
                    </StackLayout>
                </CollectionView.EmptyView>
                
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:GameDto">
                        <Frame Margin="0,5" 
                               Padding="15" 
                               BorderColor="LightGray"
                               CornerRadius="10"
                               HasShadow="True">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer 
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type vm:IndexViewModel}}, Path=GameSelectedCommand}"
                                    CommandParameter="{Binding .}"/>
                            </Frame.GestureRecognizers>
                            
                            <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto,Auto,Auto">
                            
                                <Label Grid.Row="0" Grid.Column="0"
                                       Text="{Binding Name}"
                                       FontSize="20"
                                       FontAttributes="Bold"/>
                                
                             
                                <Label Grid.Row="0" Grid.Column="1"
                                       Text="{Binding Price, StringFormat='${0:F2}'}"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       TextColor="Green"
                                       VerticalOptions="Center"/>
                                
                                
                                <Label Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                       Text="{Binding Description}"
                                       FontSize="14"
                                       TextColor="Gray"
                                       MaxLines="2"
                                       LineBreakMode="TailTruncation"
                                       Margin="0,5,0,0"/>
                                
                               
                                <Label Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                                       FontSize="12"
                                       TextColor="DarkBlue"
                                       Margin="0,5,0,0">
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span Text="Categories: "/>
                                            <Span Text="{Binding Categories, Converter={StaticResource ListToStringConverter}}"/>
                                        </FormattedString>
                                    </Label.FormattedText>
                                </Label>
                                
                                
                                <HorizontalStackLayout Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
                                                      Spacing="10"
                                                      Margin="0,10,0,0">
                                    <Button Text="View Details"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type vm:IndexViewModel}}, Path=GameSelectedCommand}"
                                            CommandParameter="{Binding .}"
                                            BackgroundColor="Blue"
                                            TextColor="White"/>
                                    
                                    <Button Text="{Binding IsOwned, Converter={StaticResource BoolToTextConverter}, ConverterParameter='Owned|Purchase'}"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type vm:IndexViewModel}}, Path=PurchaseGameCommand}"
                                            CommandParameter="{Binding .}"
                                            BackgroundColor="{Binding IsOwned, Converter={StaticResource BoolToColorConverter}}"
                                            TextColor="White"
                                            IsEnabled="{Binding IsOwned, Converter={StaticResource InvertedBoolConverter}}"/>
                                    
                                    <Label Text="âœ“ Owned" 
                                           TextColor="Green"
                                           FontAttributes="Bold"
                                           VerticalOptions="Center"
                                           IsVisible="{Binding IsOwned}"/>
                                </HorizontalStackLayout>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>
    </Grid>
</ContentPage>