<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Gauniv.Client.ViewModel"
             x:Class="Gauniv.Client.Pages.Profile"
             Title="Profile"
             x:DataType="vm:ProfileViewModel"
             BackgroundColor="#1B2838">
    
    <ScrollView Padding="20">
        <VerticalStackLayout Spacing="20">
            <Label Text="ðŸ‘¤ USER PROFILE" 
                   FontSize="24" 
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalOptions="Center"/>
            
            <Frame IsVisible="{Binding IsLoggedIn, Converter={StaticResource InvertedBoolConverter}}"
                   Padding="25"
                   CornerRadius="4"
                   BorderColor="#2A475E"
                   BackgroundColor="#16202D"
                   HasShadow="False">
                <VerticalStackLayout Spacing="15">
                    <Label Text=" Sign in to your account" 
                           FontSize="16"
                           TextColor="#66C0F4"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           Margin="0,0,0,10"/>
                    
                    <Entry Placeholder="Email address"
                           PlaceholderColor="#8F98A0"
                           Text="{Binding Email}"
                           TextColor="White"
                           BackgroundColor="#2A475E"
                           Keyboard="Email"/>
                    
                    <Entry Placeholder="Password"
                           PlaceholderColor="#8F98A0"
                           Text="{Binding Password}"
                           TextColor="White"
                           BackgroundColor="#2A475E"
                           IsPassword="True"/>
                    
                    <Button Text=" LOGIN" 
                            Command="{Binding LoginCommand}"
                            BackgroundColor="#417A9B"
                            TextColor="White"
                            FontAttributes="Bold"
                            FontSize="14"
                            CornerRadius="3"
                            Padding="0,12"
                            IsEnabled="{Binding IsLoading, Converter={StaticResource InvertedBoolConverter}}"/>
                    
                    <ActivityIndicator IsRunning="{Binding IsLoading}"
                                     IsVisible="{Binding IsLoading}"
                                     Color="#66C0F4"/>
                </VerticalStackLayout>
            </Frame>
            
            <Frame IsVisible="{Binding IsLoggedIn}"
                   Padding="25"
                   CornerRadius="4"
                   BorderColor="#2A475E"
                   BackgroundColor="#16202D"
                   HasShadow="False">
                <VerticalStackLayout Spacing="15">
                    <Label Text="âœ“ CONNECTED" 
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="#5C9F3F"
                           HorizontalOptions="Center"/>
                    
                    <Label Text="{Binding Email}" 
                           FontSize="14"
                           TextColor="#66C0F4"
                           HorizontalOptions="Center"/>
                    
                    <Button Text=" LOGOUT" 
                            Command="{Binding LogoutCommand}"
                            BackgroundColor="#C23030"
                            TextColor="White"
                            FontAttributes="Bold"
                            FontSize="14"
                            CornerRadius="3"
                            Padding="0,12"/>
                </VerticalStackLayout>
            </Frame>
            
            <Label Text="{Binding StatusMessage}" 
                   FontSize="13"
                   TextColor="#FFA500"
                   HorizontalOptions="Center"
                   IsVisible="{Binding StatusMessage, Converter={StaticResource IsNotNullConverter}}"/>
            
            <Frame Padding="15" 
                   CornerRadius="4" 
                   BorderColor="#66C0F4"
                   BackgroundColor="#2A475E">
                
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>