<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Gauniv.Client.ViewModel"
             xmlns:models="clr-namespace:Gauniv.Client.Models"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="Gauniv.Client.Pages.MyGames"
             Title="My Games"
             x:DataType="vm:MyGamesViewModel">
    
    <RefreshView IsRefreshing="{Binding IsLoading}"
                 Command="{Binding LoadMyGamesCommand}"
                 Margin="10">
        <CollectionView ItemsSource="{Binding MyGames}"
                       SelectionMode="None">
            <CollectionView.EmptyView>
                <StackLayout VerticalOptions="Center" HorizontalOptions="Center" Padding="20">
                    <Label Text="You don't own any games yet" 
                           FontSize="18" 
                           HorizontalTextAlignment="Center"
                           TextColor="Gray"/>
                    <Label Text="Go to the Games tab to purchase games" 
                           FontSize="14" 
                           HorizontalTextAlignment="Center"
                           TextColor="Gray"
                           Margin="0,10,0,0"/>
                </StackLayout>
            </CollectionView.EmptyView>
            
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:GameDto">
                    <Frame Margin="0,5" 
                           Padding="15" 
                           BorderColor="LightGray"
                           CornerRadius="10"
                           HasShadow="True">
                        <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto,Auto,Auto,Auto">
                            <!-- Game Name -->
                            <Label Grid.Row="0" Grid.Column="0"
                                   Text="{Binding Name}"
                                   FontSize="20"
                                   FontAttributes="Bold"/>
                            
                            <!-- Status Badge -->
                            <Label Grid.Row="0" Grid.Column="1"
                                   Text="{Binding IsRunning, Converter={StaticResource BoolToTextConverter}, ConverterParameter='â— Running|'}"
                                   FontSize="14"
                                   TextColor="Green"
                                   FontAttributes="Bold"
                                   VerticalOptions="Center"
                                   IsVisible="{Binding IsRunning}"/>
                            
                            <!-- Description -->
                            <Label Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                   Text="{Binding Description}"
                                   FontSize="14"
                                   TextColor="Gray"
                                   MaxLines="2"
                                   LineBreakMode="TailTruncation"
                                   Margin="0,5,0,0"/>
                            
                            <!-- Size -->
                            <Label Grid.Row="2" Grid.Column="0"
                                   Text="{Binding Size, StringFormat='Size: {0:N0} bytes'}"
                                   FontSize="12"
                                   TextColor="Gray"
                                   Margin="0,5,0,0"
                                   IsVisible="{Binding Size, Converter={StaticResource IsNotNullConverter}}"/>
                            
                            <!-- Download Status -->
                            <Label Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
                                   FontSize="12"
                                   Margin="0,5,0,0">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="Status: "/>
                                        <Span Text="{Binding IsDownloaded, Converter={StaticResource BoolToTextConverter}, ConverterParameter='Downloaded|Not Downloaded'}"
                                              FontAttributes="Bold"
                                              TextColor="{Binding IsDownloaded, Converter={StaticResource BoolToColorConverter}}"/>
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                            
                            <!-- Action Buttons -->
                            <FlexLayout Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2"
                                       Wrap="Wrap"
                                       JustifyContent="Start"
                                       AlignItems="Start"
                                       Margin="0,10,0,0">
                                
                                <!-- Download Button -->
                                <Button Text="Download"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type vm:MyGamesViewModel}}, Path=DownloadGameCommand}"
                                        CommandParameter="{Binding .}"
                                        BackgroundColor="Green"
                                        TextColor="White"
                                        IsVisible="{Binding IsDownloaded, Converter={StaticResource InvertedBoolConverter}}"
                                        Margin="0,0,5,5"/>
                                
                                <!-- Launch Button -->
                                <Button Text="Launch"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type vm:MyGamesViewModel}}, Path=LaunchGameCommand}"
                                        CommandParameter="{Binding .}"
                                        BackgroundColor="Blue"
                                        TextColor="White"
                                        IsVisible="{Binding IsDownloaded}"
                                        IsEnabled="{Binding IsRunning, Converter={StaticResource InvertedBoolConverter}}"
                                        Margin="0,0,5,5"/>
                                
                                <!-- Stop Button -->
                                <Button Text="Stop"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type vm:MyGamesViewModel}}, Path=StopGameCommand}"
                                        CommandParameter="{Binding .}"
                                        BackgroundColor="Orange"
                                        TextColor="White"
                                        IsVisible="{Binding IsRunning}"
                                        Margin="0,0,5,5"/>
                                
                                <!-- Delete Button -->
                                <Button Text="Delete"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type vm:MyGamesViewModel}}, Path=DeleteGameCommand}"
                                        CommandParameter="{Binding .}"
                                        BackgroundColor="Red"
                                        TextColor="White"
                                        IsVisible="{Binding IsDownloaded}"
                                        Margin="0,0,5,5"/>
                                
                                <!-- View Details Button -->
                                <Button Text="Details"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type vm:MyGamesViewModel}}, Path=GameSelectedCommand}"
                                        CommandParameter="{Binding .}"
                                        BackgroundColor="Gray"
                                        TextColor="White"
                                        Margin="0,0,5,5"/>
                            </FlexLayout>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </RefreshView>
</ContentPage>