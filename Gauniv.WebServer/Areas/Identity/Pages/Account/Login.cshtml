@page
@model LoginModel

@{
    ViewData["Title"] = "Se connecter";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h2 class="card-title mb-3 text-center"><i class="bi bi-box-arrow-in-right me-2"></i>Se connecter</h2>
                    <p class="text-muted text-center mb-4">Connectez-vous à votre compte pour accéder à votre bibliothèque</p>

                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="adresse@exemple.com" />
                            <label asp-for="Input.Email">Adresse e-mail</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="mot de passe" />
                            <label asp-for="Input.Password">Mot de passe</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <div class="form-check">
                                <input class="form-check-input" asp-for="Input.RememberMe" id="rememberMe" />
                                <label class="form-check-label ms-2" for="rememberMe">Se souvenir de moi</label>
                            </div>
                        </div>

                        <div class="d-grid mb-3">
                            <button id="login-submit" type="submit" class="btn btn-primary btn-lg">Se connecter</button>
                        </div>

                        <div class="text-center mb-3">
                            <small class="text-muted">Pas encore de compte ? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">S'inscrire</a></small>
                        </div>
                        
                    </form>
</div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
