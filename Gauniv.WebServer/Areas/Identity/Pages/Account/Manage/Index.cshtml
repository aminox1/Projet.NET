@page
@model IndexModel
@{
    ViewData["Title"] = "Profil";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h3 class="mb-0">@ViewData["Title"]</h3>
                        <small class="text-muted">Gérez vos informations</small>
                    </div>

                    <partial name="_StatusMessage" for="StatusMessage" />

                    <div class="row g-3">
                        <div class="col-md-4 d-flex flex-column align-items-center text-center">
                            <div class="mb-3">
                                <div class="rounded-circle bg-secondary text-white d-flex align-items-center justify-content-center" style="width:120px;height:120px;font-size:2.2rem;">
                                    @if (!string.IsNullOrEmpty(User?.Identity?.Name))
                                    {
                                        @User.Identity.Name.Substring(0,1).ToUpper()
                                    }
                                    else
                                    {
                                        <span>U</span>
                                    }
                                </div>
                            </div>
                            <div class="w-100">
                                <p class="mb-1"><strong>Nom d'utilisateur</strong></p>
                                <p class="text-muted">@Model.Username</p>
                            </div>
                        </div>

                        <div class="col-md-8">
                            <form id="profile-form" method="post" onsubmit="(function(b){b.disabled=true;document.getElementById('profile-spinner').classList.remove('d-none');})(document.getElementById('update-profile-button'))">
                                <div asp-validation-summary="ModelOnly" class="text-danger mb-2" role="alert"></div>

                                <div class="form-floating mb-3">
                                    <input asp-for="Input.FirstName" class="form-control" placeholder="Prénom" autofocus />
                                    <label asp-for="Input.FirstName">Prénom</label>
                                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <input asp-for="Input.LastName" class="form-control" placeholder="Nom" />
                                    <label asp-for="Input.LastName">Nom</label>
                                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Numéro de téléphone" />
                                    <label asp-for="Input.PhoneNumber">Téléphone</label>
                                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                                </div>

                                <div class="d-flex gap-2">
                                    <button id="update-profile-button" type="submit" class="btn btn-primary flex-fill">
                                        <span id="profile-spinner" class="spinner-border spinner-border-sm me-2 d-none" role="status" aria-hidden="true"></span>
                                        Enregistrer
                                    </button>
                                    <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">Annuler</a>
                                </div>
                            </form>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
