@model IEnumerable<Gauniv.WebServer.Data.Category>

@{
    ViewData["Title"] = "Categories Management";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Categories Management</h1>
        <div>
            <a asp-action="CreateCategory" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Add New Category
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to Admin
            </a>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <td>@category.Id</td>
                        <td>@category.Name</td>
                        <td>@category.Description</td>
                        <td>
                            <a asp-action="EditCategory" asp-route-id="@category.Id" class="btn btn-sm btn-warning">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <form asp-action="DeleteCategory" asp-route-id="@category.Id" method="post" class="d-inline"
                                  onsubmit="return confirm('Are you sure you want to delete this category?');">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No categories available. Click "Add New Category" to create one.
        </div>
    }
</div>
