@model Gauniv.WebServer.ViewModels.CategoryListViewModel

@{
    ViewData["Title"] = "Gestion des catégories";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Gestion des catégories</h1>
        <div>
            <a asp-action="CreateCategory" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Ajouter une catégorie
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Retour à l'administration
            </a>
        </div>
    </div>

    <form method="get" asp-action="Categories" class="mb-3 row g-2 align-items-end">
        <div class="col-auto">
            <label class="form-label small">Recherche</label>
            <input type="search" name="search" class="form-control" value="@Model.Search" placeholder="Recherche par nom" />
        </div>
        <div class="col-auto">
            <label class="form-label small">Page size</label>
            <select name="pageSize" class="form-select">
                @if (Model.PageSize == 10)
                {
                    <option value="10" selected>10</option>
                }
                else
                {
                    <option value="10">10</option>
                }

                @if (Model.PageSize == 25)
                {
                    <option value="25" selected>25</option>
                }
                else
                {
                    <option value="25">25</option>
                }

                @if (Model.PageSize == 50)
                {
                    <option value="50" selected>50</option>
                }
                else
                {
                    <option value="50">50</option>
                }
            </select>
        </div>
        <div class="col-auto">
            <input type="hidden" name="page" value="1" />
            <div class="d-flex gap-2">
                <button class="btn btn-primary">Appliquer</button>
                <a class="btn btn-outline-secondary" href="@Url.Action("Categories", "Admin")">Réinitialiser</a>
            </div>
        </div>
    </form>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Nom</th>
                    <th>Nombre de jeux</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model.Items)
                {
                    <tr>
                        <td>@category.Id</td>
                        <td>@category.Name</td>
                        <td>@category.GamesCount</td>
                        <td>
                            <a asp-action="EditCategory" asp-route-id="@category.Id" class="btn btn-sm btn-warning">
                                <i class="bi bi-pencil"></i> Modifier
                            </a>
                            <form asp-action="DeleteCategory" asp-route-id="@category.Id" method="post" class="d-inline"
                                  onsubmit="return confirm('Voulez-vous vraiment supprimer cette catégorie ?');">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash"></i> Supprimer
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if (!Model.Items.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> Aucune catégorie disponible. Cliquez sur "Ajouter une catégorie" pour en créer une.
        </div>
    }

    <nav aria-label="Navigation des pages">
        <ul class="pagination">
            <li class="page-item @(Model.Page <= 1 ? "disabled" : "")">
                <a class="page-link" href="@Url.Action("Categories", new { page = 1, pageSize = Model.PageSize, search = Model.Search })">Début</a>
            </li>
            <li class="page-item @(Model.Page <= 1 ? "disabled" : "")">
                <a class="page-link" href="@Url.Action("Categories", new { page = Model.Page - 1, pageSize = Model.PageSize, search = Model.Search })">Précédent</a>
            </li>

            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.Page ? "active" : "")">
                    <a class="page-link" href="@Url.Action("Categories", new { page = i, pageSize = Model.PageSize, search = Model.Search })">@i</a>
                </li>
            }

            <li class="page-item @(Model.Page >= Model.TotalPages ? "disabled" : "")">
                <a class="page-link" href="@Url.Action("Categories", new { page = Model.Page + 1, pageSize = Model.PageSize, search = Model.Search })">Suivant</a>
            </li>
            <li class="page-item @(Model.Page >= Model.TotalPages ? "disabled" : "")">
                <a class="page-link" href="@Url.Action("Categories", new { page = Model.TotalPages, pageSize = Model.PageSize, search = Model.Search })">Fin</a>
            </li>
        </ul>
    </nav>
</div>
