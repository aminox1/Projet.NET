@{
    ViewData["Title"] = "Administration";
}

<div class="container mt-5">
    <h1 class="mb-4">Panneau d'administration</h1>
    
    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="bi bi-controller"></i> Gestion des jeux
                    </h5>
                    <p class="card-text">Gérez votre bibliothèque de jeux : ajouter, modifier ou supprimer des jeux.</p>
                    <a asp-action="Games" class="btn btn-primary">Gérer les jeux</a>
                </div>
            </div>
        </div>
        
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="bi bi-tags"></i> Gestion des catégories
                    </h5>
                    <p class="card-text">Organisez les jeux par catégories.</p>
                    <a asp-action="Categories" class="btn btn-primary">Gérer les catégories</a>
                </div>
            </div>
        </div>
    </div>
</div>
