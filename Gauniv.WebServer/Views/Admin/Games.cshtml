@model IEnumerable<Gauniv.WebServer.Data.Game>

@{
    ViewData["Title"] = "Games Management";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Games Management</h1>
        <div>
            <a asp-action="CreateGame" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Add New Game
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to Admin
            </a>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Size</th>
                    <th>Categories</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var game in Model)
                {
                    <tr>
                        <td>@game.Id</td>
                        <td>@game.Name</td>
                        <td>$@game.Price.ToString("F2")</td>
                        <td>@(game.Size.HasValue ? $"{game.Size.Value / 1024 / 1024} MB" : "N/A")</td>
                        <td>
                            @string.Join(", ", game.Categories.Select(c => c.Name))
                        </td>
                        <td>
                            <a asp-action="EditGame" asp-route-id="@game.Id" class="btn btn-sm btn-warning">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <form asp-action="DeleteGame" asp-route-id="@game.Id" method="post" class="d-inline" 
                                  onsubmit="return confirm('Are you sure you want to delete this game?');">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No games available. Click "Add New Game" to create one.
        </div>
    }
</div>
