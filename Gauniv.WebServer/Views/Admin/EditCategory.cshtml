@model Gauniv.WebServer.Data.Category

@{
    ViewData["Title"] = "Modifier la catégorie";
}

<style>
    .back-action { display:flex; gap:12px; align-items:center; }
    @@media (max-width:576px) { .back-action { flex-direction:column; align-items:flex-start; } }
</style>

<div class="container mt-4">
    <!-- header with prominent back button -->
    @{
        var returnUrl = ViewData["ReturnUrl"] as string ?? Url.Action("Categories", "Admin");
    }
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h1 class="h3 mb-0">Modifier la catégorie</h1>
        </div>
        <div class="back-action">
            <a class="btn btn-lg btn-primary d-inline-flex align-items-center" href="@returnUrl" role="button" aria-label="Retour à la liste des catégories">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-arrow-left me-2" viewBox="0 0 16 16" aria-hidden="true">
                    <path fill-rule="evenodd" d="M15 8a.5.5 0 0 1-.5.5H2.707l3.147 3.146a.5.5 0 0 1-.708.708l-4-4a.5.5 0 0 1 0-.708l4-4a.5.5 0 1 1 .708.708L2.707 7.5H14.5A.5.5 0 0 1 15 8z"/>
                </svg>
                Retourner à la liste
            </a>
        </div>
    </div>

    @if (TempData["EditCategorySuccess"] != null)
    {
        <div class="alert alert-success">@TempData["EditCategorySuccess"]</div>
    }
    @if (TempData["EditCategoryError"] != null)
    {
        <div class="alert alert-danger">@TempData["EditCategoryError"]</div>
    }

    <form asp-action="EditCategory" asp-route-id="@Model.Id" method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()
        <input type="hidden" name="returnUrl" value="@returnUrl" />
        
        <div class="mb-3">
            <label asp-for="Name" class="form-label">Nom de la catégorie</label>
            <input asp-for="Name" class="form-control" required />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label">Description (optionnelle)</label>
            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Image actuelle</label>
            @if (Model.ImageData != null && Model.ImageData.Length > 0)
            {
                <div class="card" style="width:10rem;">
                    <img src="@Url.Action("GetImage","Categories", new { id = Model.Id })" class="card-img-top" alt="Image de la catégorie" style="height:8rem;object-fit:cover;" />
                    <div class="card-body p-2">
                        <span class="small text-muted">Aperçu</span>
                    </div>
                </div>
            }
            else
            {
                <div class="text-muted">Aucune image uploadée pour le moment.</div>
            }
        </div>

        <div class="mb-3">
            <label class="form-label">Remplacer / Uploader une image (optionnel)</label>
            <input type="file" name="imageFile" accept="image/*" class="form-control" />
        </div>

        <div class="mt-4">
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-save"></i> Enregistrer
            </button>
            <a class="btn btn-secondary" href="@returnUrl">
                <i class="bi bi-x-circle"></i> Annuler
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
