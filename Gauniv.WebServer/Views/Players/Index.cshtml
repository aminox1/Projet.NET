@{
    ViewData["Title"] = "Joueurs";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h2>Joueurs</h2>
            <p class="text-muted">Liste en temps réel des joueurs connectés et de leur statut.</p>
            <div class="card">
                <div class="card-body">
                    <div class="mb-3 d-flex gap-2">
                        <input id="players-search" class="form-control form-control-sm" placeholder="Rechercher par nom" />
                        <select id="players-pageSize" class="form-select form-select-sm" style="width: auto;">
                            <option value="5">5</option>
                            <option value="10" selected>10</option>
                            <option value="25">25</option>
                        </select>
                    </div>
                    <div id="players-list">Chargement…</div>
                    <nav class="mt-3">
                        <ul id="players-pagination" class="pagination pagination-sm"></ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="/lib/microsoft/signalr/dist/browser/signalr.min.js"></script>
    <script src="/js/players-presence.js"></script>
}
