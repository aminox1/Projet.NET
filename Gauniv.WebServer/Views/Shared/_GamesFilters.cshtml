@model Gauniv.WebServer.ViewModels.GamesListViewModel
@using System.Net
@{
    var baseUrl = ViewData["BaseUrl"] as string ?? Url.Action("Index", "Home");

    var categoriesList = Model.Items?.SelectMany(i => i.Categories ?? new List<string>()).Where(c => !string.IsNullOrEmpty(c)).Distinct().OrderBy(c => c).ToList() ?? new List<string>();

    var selectedCategories = new HashSet<string>(StringComparer.OrdinalIgnoreCase);
    if (!string.IsNullOrWhiteSpace(Model.Category))
    {
        foreach (var s in Model.Category.Split(new[] { ',' }, StringSplitOptions.RemoveEmptyEntries))
        {
            var t = s.Trim();
            if (!string.IsNullOrEmpty(t)) selectedCategories.Add(t);
        }
    }

    var hideIsOwned = false;
    var hideObj = ViewData["HideIsOwnedFilter"];
    if (hideObj is bool hb) hideIsOwned = hb;
    else if (hideObj != null)
    {
        bool.TryParse(hideObj.ToString(), out hideIsOwned);
    }
}

<div class="card mb-4">
    <div class="card-body">
        <form method="get" action="@baseUrl" class="">
            <div class="row g-3 align-items-end">
                <div class="col-md-9">
                    <div class="row g-3">
                        <div class="col-12 col-md-6">
                            <label class="form-label mb-1">Nom</label>
                            <input type="text" name="name" value="@Model.Name" class="form-control" placeholder="Rechercher un jeu" />
                        </div>

                        @if (User?.Identity?.IsAuthenticated == true && User.IsInRole("User") && !hideIsOwned)
                        {
                            <div class="col-12 col-md-6">
                                <label class="form-label mb-1">Possession</label>
                                <select name="isOwned" class="form-select">
                                    @if (Model.IsOwned == null)
                                    {
                                        <option value="" selected>Tout</option>
                                    }
                                    else
                                    {
                                        <option value="">Tout</option>
                                    }

                                    @if (Model.IsOwned == true)
                                    {
                                        <option value="true" selected>Possédés</option>
                                    }
                                    else
                                    {
                                        <option value="true">Possédés</option>
                                    }

                                    @if (Model.IsOwned == false)
                                    {
                                        <option value="false" selected>Non possédés</option>
                                    }
                                    else
                                    {
                                        <option value="false">Non possédés</option>
                                    }
                                </select>
                                <div class="form-text">Filtrer selon que vous possédez le jeu</div>
                            </div>
                        }
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="d-flex gap-2">
                        <button class="btn btn-outline-secondary flex-fill" type="button" data-bs-toggle="collapse" data-bs-target="#advancedFilters" aria-expanded="false" aria-controls="advancedFilters">
                            <i class="bi bi-sliders me-1"></i> Filtres
                        </button>
                        <button type="submit" class="btn btn-primary flex-fill">
                            <i class="bi bi-funnel-fill me-1"></i> Appliquer
                        </button>
                        <a class="btn btn-outline-secondary flex-fill" href="@baseUrl">
                            <i class="bi bi-arrow-counterclockwise me-1"></i> Réinitialiser
                        </a>
                    </div>
                </div>
            </div>

            <div class="collapse mt-3" id="advancedFilters">
                <div class="card card-body">
                    <div class="row g-3">
                        <div class="col-md-4">
                            <label class="form-label">Prix (min - max)</label>
                            <div class="d-flex">
                                <div class="input-group me-1">
                                    <span class="input-group-text">€</span>
                                    <input type="number" step="0.01" name="minPrice" value="@(Model.MinPrice?.ToString() ?? "")" class="form-control" placeholder="min" />
                                </div>
                                <div class="input-group">
                                    <span class="input-group-text">€</span>
                                    <input type="number" step="0.01" name="maxPrice" value="@(Model.MaxPrice?.ToString() ?? "")" class="form-control" placeholder="max" />
                                </div>
                            </div>
                        </div>

                        <div class="col-md-2">
                            <label class="form-label">Taille min (KB)</label>
                            <input type="number" name="minSize" value="@(Model.MinSize?.ToString() ?? "")" class="form-control" placeholder="KB" />
                        </div>
                        <div class="col-md-2">
                            <label class="form-label">Taille max (KB)</label>
                            <input type="number" name="maxSize" value="@(Model.MaxSize?.ToString() ?? "")" class="form-control" placeholder="KB" />
                        </div>

                        <div class="col-md-2">
                            <label class="form-label">Page</label>
                            <input type="number" name="page" value="@Model.Page" min="1" class="form-control" />
                        </div>

                        <div class="col-md-2">
                            <label class="form-label">Page size</label>
                            <select name="pageSize" class="form-select">
                                @if (Model.PageSize == 10) { <option value="10" selected>10</option> } else { <option value="10">10</option> }
                                @if (Model.PageSize == 20) { <option value="20" selected>20</option> } else { <option value="20">20</option> }
                                @if (Model.PageSize == 50) { <option value="50" selected>50</option> } else { <option value="50">50</option> }
                            </select>
                        </div>

                        <div class="col-12 mt-2">
                            <label class="form-label">Catégories</label>
                            <div class="d-flex flex-wrap gap-2">
                                @foreach (var c in categoriesList)
                                {
                                    var id = "cat_" + c.Replace(" ", "_").Replace("/","_");
                                    if (selectedCategories.Contains(c))
                                    {
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" name="category" value="@c" id="@id" checked />
                                            <label class="form-check-label" for="@id">@c</label>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" name="category" value="@c" id="@id" />
                                            <label class="form-check-label" for="@id">@c</label>
                                        </div>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
