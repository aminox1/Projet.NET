<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gauniv</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    @if(User?.Identity?.IsAuthenticated == true)
    {
        <script src="~/js/signalr/dist/browser/signalr.js"></script>
            <script src="~/js/online.js"></script>
    }
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        @{
            string GetActive(string controller, string? action = null)
            {
                var routeCtrl = (ViewContext.RouteData.Values["controller"] ?? string.Empty).ToString();
                var routeAct = (ViewContext.RouteData.Values["action"] ?? string.Empty).ToString();
                if (string.Equals(routeCtrl, controller, System.StringComparison.OrdinalIgnoreCase))
                {
                    if (action is null) return "active";
                    if (string.Equals(routeAct, action, System.StringComparison.OrdinalIgnoreCase)) return "active";
                }
                return string.Empty;
            }
        }
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 navbar-custom" aria-label="Barre de navigation principale">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Catalogue</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Basculer la navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class='nav-link text-dark @(GetActive("Home","Index"))' asp-area="" asp-controller="Home" asp-action="Index">Jeux</a>
                        </li>
                        <li class="nav-item">
                            <a class='nav-link text-dark @(GetActive("Categories","Index"))' asp-area="" asp-controller="Categories" asp-action="Index">Catégories</a>
                        </li>
                        @if (User?.Identity?.IsAuthenticated == true && User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class='nav-link text-dark @(GetActive("Admin"))' href="/Admin">Administration</a>
                            </li>
                        }
                        @if (User?.Identity?.IsAuthenticated == true && User.IsInRole("User"))
                        {
                            <li class="nav-item">
                                <a class='nav-link text-dark @(GetActive("GamesWeb","MyGames"))' asp-area="" asp-controller="GamesWeb" asp-action="MyGames">Mes jeux</a>
                            </li>
                        }
                    </ul>

                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - Mamitiana et Amine
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    @* Global SignalR bootstrap for presence: only start for users in role 'User' (keeps a connection open on all pages) *@
    @if (User?.Identity?.IsAuthenticated == true)
    {
        <script src="~/lib/microsoft/signalr/dist/browser/signalr.min.js"></script>
        <script src="~/js/online.js"></script>
        @if (User.IsInRole("User"))
        {
            <script src="~/js/players-presence-bootstrap.js"></script>
        }
    }
    else
    {
        <script src="~/js/online.js"></script>
    }
</body>
</html>
